{
	"name": "@maximo-syntax/cli-app",
	"version": "0.0.45",
	"description": "Maximo Syntax CLI App - Run the Maximo Syntax agent from the command line",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"roo": "dist/index.js"
	},
	"scripts": {
		"format": "prettier --write 'src/**/*.ts'",
		"lint": "eslint src --ext .ts --max-warnings=0",
		"check-types": "tsc --noEmit",
		"test": "vitest run",
		"build": "tsup",
		"dev": "tsup --watch",
		"start": "ROO_SDK_BASE_URL=http://localhost:3001 ROO_AUTH_BASE_URL=http://localhost:3000 node dist/index.js",
		"start:production": "node dist/index.js",
		"release": "scripts/release.sh",
		"clean": "rimraf dist .turbo"
	},
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"@maximo-syntax/core": "workspace:^",
		"@maximo-syntax/types": "workspace:^",
		"@maximo-syntax/vscode-shim": "workspace:^",
		"@trpc/client": "^11.8.1",
		"@vscode/ripgrep": "^1.15.9",
		"commander": "^12.1.0",
		"fuzzysort": "^3.1.0",
		"ink": "^6.6.0",
		"p-wait-for": "^5.0.2",
		"react": "^19.1.0",
		"superjson": "^2.2.6",
		"zustand": "^5.0.0"
	},
	"devDependencies": {
		"@maximo-syntax/config-eslint": "workspace:^",
		"@maximo-syntax/config-typescript": "workspace:^",
		"@types/node": "^24.1.0",
		"@types/react": "^19.1.6",
		"ink-testing-library": "^4.0.0",
		"rimraf": "^6.0.1",
		"tsup": "^8.4.0",
		"vitest": "^3.2.3"
	}
}
